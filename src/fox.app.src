%% -*- mode: Erlang;-*-
{application, fox,
 [
  {description, "Client lib for RabbitMQ"},
  {vsn, "2.4.0"},
  {registered, []},
  {applications, [kernel, stdlib, amqp_client]},
  {mod, {fox_app, []}},
  {env, [
         {connection_pool_size, 5},
         {connection_timeout, 10000},
         {max_reconnect_timeout, 5000},
         {min_reconnect_timeout, 100},
         {num_publish_channels, 20}
        ]},
  {licenses, ["MIT"]}
 ]}.
